use Magento\Framework\Escaper;
use MageINIC\SizeChart\Block\SizeChart\SizeChartLink;

/**
 * @var $block SizeChartLink;
 * @var $escaper Escaper;
 */

$sizechartcollection = $block->getSizeChartDetails();
$enable = $block->getEnable();
?>
<?php if ($enable): ?>
    <?php foreach ($sizechartcollection as $collection): ?>
        <?php if ($collection->getStatus()): ?>
            <span>
                <a id="sizechart_link" rel="nofollow"
                   href="javascript:void(0);"><?= $escaper->escapeHtml(__("SizeChart")) ?>
                </a>
            </span>
        <?php endif; ?>
    <?php endforeach; ?>
<?php endif; ?>
